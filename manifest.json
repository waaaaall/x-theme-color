{
  "manifest_version": 3,
  "name": "X Theme Color Changer",
  "version": "1.0.0",
  "description": "Change X(Twitter) accent color freely.",
  "permissions": ["storage","activeTab"],
  "host_permissions": ["*://*.twitter.com/*", "*://*.x.com/*"],
  "action": {
    "default_title": "X Theme Color",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
